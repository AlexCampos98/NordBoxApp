<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvEjercicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEvento"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivEntrenador"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/entrendor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvEventoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivEntrenador"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivEntrenador"
            app:layout_constraintTop_toBottomOf="@+id/tvEventoNombre">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivDeportista1"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivDeportista5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />

                <ImageView
                    android:id="@+id/ivDeportista8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_tabla_titulo"
                    android:contentDescription="@string/deportista" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnEventoApuntarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>